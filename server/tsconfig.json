{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ],
            "@Types": [
                "./Types"
            ],
            "@Repositories": [
                "./Repository"
            ],
        }
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules", "dist"
    ],
    "type": [
        "node"
    ]
}